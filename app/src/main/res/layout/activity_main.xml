<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/darkMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            android:checked="true"
            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/firstText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="31sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/firstText"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#6C6C6C"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/secondText"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="#A46C6C6C"
            android:textSize="21sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fourthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/thirdText"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="#526C6C6C"
            android:textSize="21sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fifthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fourthText"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:text=""
            android:textColor="#6B6C6C6C"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/sixthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fifthText"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:text=""
            android:textColor="#2D6C6C6C"
            android:textSize="17sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clean"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/color_circle_button"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="24sp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/division"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/clean"
                android:background="@drawable/circle_button"
                android:src="@drawable/divide_icon"
                android:tint="@color/black">

            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/percent"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/backspace"
                android:layout_toRightOf="@id/division"
                android:background="@drawable/circle_button"
                android:src="@drawable/percent_icon"
                android:tint="@color/black">

            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backspace"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/color_circle_button"
                android:src="@drawable/clear_icon"
                android:tint="@color/white">

            </androidx.appcompat.widget.AppCompatImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/white_circle_button"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/seven"
                android:background="@drawable/white_circle_button"
                android:text="8"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/multiply"
                android:layout_toRightOf="@id/eight"
                android:background="@drawable/white_circle_button"
                android:text="9"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                >

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiply"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_button"
                android:text="x"
                android:textSize="24sp"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/white_circle_button"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/four"
                android:background="@drawable/white_circle_button"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/minus"
                android:layout_toRightOf="@id/five"
                android:background="@drawable/white_circle_button"
                android:text="6"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_button"
                android:src="@drawable/minus_icon"
                android:tint="@color/black">

            </androidx.appcompat.widget.AppCompatImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/white_circle_button"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/one"
                android:background="@drawable/white_circle_button"
                android:text="2"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/plus"
                android:layout_toRightOf="@id/two"
                android:background="@drawable/white_circle_button"
                android:text="3"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_button"
                android:src="@drawable/plus_icon"
                android:tint="@color/black">

            </androidx.appcompat.widget.AppCompatImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/blank"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/white_circle_button"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/blank"
                android:background="@drawable/white_circle_button"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@+id/equal"
                android:layout_toRightOf="@id/zero"
                android:background="@drawable/white_circle_button"
                android:text="."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/equal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/color_circle_button"
                android:src="@drawable/equal_icon"
                android:tint="@color/white">

            </androidx.appcompat.widget.AppCompatImageButton>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
